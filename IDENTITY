CREATE TABLE IDENT_TAB(ID INT IDENTITY, NAME VARCHAR(10))

INSERT INTO  IDENT_TAB VALUES('UMMKI')

SELECT * FROM IDENT_TAB

INSERT INTO  IDENT_TAB VALUES(3,'IMRAN') --An explicit value for the identity column in table 'IDENT_TAB' can only be specified when a column list is used and IDENTITY_INSERT is ON.

SET IDENTITY_INSERT IDENT_TAB OFF

INSERT INTO  IDENT_TAB(ID,NAME) VALUES(4,'IMRAN')

DELETE FROM IDENT_TAB WHERE ID =1

INSERT INTO  IDENT_TAB(ID,NAME) VALUES(1,'IMRAN')

SELECT * FROM IDENT_TAB

--AFTER DELETING ALL RECORDS AND THEN IF I INSERT ANY RECORD THE IDENTITY WILL NOT START WITH ONE 1 IT WILL STILL CONTINUES THDE RANGE
-- TO OBER COME THIS PROBLM WE HAVE ONE APPROACH THAT IS 
--DBCC(DATABASE CONSISTENT CHECK  --> WHICH IS USED TO RESET THE IDENTITY VALUE
--SYNTAX--> DBCC CHECKIDENDT(TABLE_NAME,RESEEB,0)
DBCC CHECKIDENT(IDENT_TAB,RESEED,0)  --Checking identity information: current identity value '4'.
									 --DBCC execution completed. If DBCC printed error messages, contact your system administrator.
INSERT INTO  IDENT_TAB VALUES('IMRAN') --1
